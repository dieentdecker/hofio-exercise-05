<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<f:SimpleForm id="edit_simpleform" editable="false" layout="ResponsiveGridLayout" title="{i18n>title}" labelSpanXL="3" labelSpanL="3"
		labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1"
		columnsL="1" columnsM="1" singleContainerFullSize="false">
		<f:content>
			<Label id="edit_label_firstname" text="{/#Customer/Firstname/@sap:label}" labelFor="edit_input_firstname"/>
			<Input id="edit_input_firstname" value="{Firstname}"/>
			<Label id="edit_label_lastname" text="{/#Customer/Lastname/@sap:label}" labelFor="edit_input_lastname"/>
			<Input id="edit_input_lastname" value="{Lastname}"/>
			<Label id="edit_label_title" text="{/#Customer/AcademicTitle/@sap:label}" labelFor="edit_input_title"/>
			<Input id="edit_input_title" value="{AcademicTitle}"/>
			<Label id="edit_label_gender" text="{/#Customer/Gender/@sap:label}" labelFor="edit_select_gender"/>
			<Select id="edit_select_gender" selectedKey="{Gender}">
				<items>
					<core:Item key="M" text="{i18n>select.gender.male}"/>
					<core:Item key="F" text="{i18n>select.gender.female}"/>
				</items>
			</Select>
			<Label id="edit_label_email" text="{/#Customer/Email/@sap:label}" labelFor="edit_input_email"/>
			<Input id="edit_input_email" value="{Email}"/>
			<Label id="edit_label_phone" text="{/#Customer/Phone/@sap:label}" labelFor="edit_input_phone"/>
			<Input id="edit_input_phone" value="{Phone}"/>
			<Label id="edit_label_website" text="{/#Customer/Website/@sap:label}" labelFor="edit_input_website"/>
			<Input id="edit_input_website" value="{Website}"/>
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition>